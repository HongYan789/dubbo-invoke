<idea-plugin>
    <id>com.hongyan.dubbo-invoke</id>
    <name>Dubbo Invoke Generator</name>
    <vendor email="hongyan789@example.com" url="https://github.com/HongYan789">HongYan</vendor>

    <description><![CDATA[
    A modern IntelliJ IDEA plugin for generating Dubbo invoke commands from Java interface methods.
    
    Features:
    • Smart command generation: Right-click on Java methods to generate Dubbo invoke commands
    • Keyboard shortcuts: Use Ctrl+Alt+D to quickly generate commands to clipboard
    • One-click copy: Quickly copy generated commands to clipboard
    • Intelligent parsing: Automatically parse method signatures, parameters and return types
    • Type support: Support for generating example values for various Java data types
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    
    <!-- 添加类加载器配置解决Dubbo类可见性问题 -->
    <idea-version since-build="233" until-build="242.*"/>
    
    <!-- 应用服务组件 -->
    <applicationListeners>
        <listener class="com.hongyan.dubboinvoke.service.DubboInvokeService" 
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Dubbo Invoke Action -->
        <action id="DubboInvoke.GenerateCommand" 
                class="com.hongyan.dubboinvoke.action.DubboInvokeAction"
                text="Generate Dubbo Invoke Command"
                description="Generate Dubbo invoke command for Java method">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
        </action>
        
        <!-- Quick Copy Action -->
        <action id="DubboInvoke.QuickCopy" 
                class="com.hongyan.dubboinvoke.action.QuickCopyAction"
                text="Quick Copy Dubbo Command"
                description="Quickly generate and copy Dubbo invoke command to clipboard">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
        </action>
        
        <!-- Config Action -->
        <action id="DubboInvoke.Config" 
                class="com.hongyan.dubboinvoke.action.ConfigAction"
                text="Dubbo Invoke Settings"
                description="Configure Dubbo invoke settings">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        
        <!-- Method Signature Manager Action -->
        <action id="DubboInvoke.MethodSignatureManager" 
                class="com.hongyan.dubboinvoke.action.MethodSignatureManagerAction"
                text="Method Signature Manager"
                description="Manage cached Dubbo method signatures">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>